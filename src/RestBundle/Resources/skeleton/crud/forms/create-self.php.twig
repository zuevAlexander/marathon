<?php

namespace {{ bundle.namespace }}\Form\{{ entity.name_with_namespace }};

{% block use_statements %}
use Symfony\Component\Form\FormBuilderInterface;
{% endblock use_statements %}

/**
{% block phpdoc_class_header %}
 * Class {{ form.additional.selfFormType.name }}
{% endblock phpdoc_class_header %}
 */
{% block class_definition %}
class {{ form.additional.selfFormType.name }} extends {{ entity.name }}CreateType
{% endblock class_definition %}
{
{%- block class_body %}

    /**
     * @param FormBuilderInterface $builder
     * @param array $options
     */
    public function buildForm(FormBuilderInterface $builder, array $options)
    {
        parent::buildForm($builder, $options);
        $builder
        {%- for toRemoveField in form.additional.selfFormType.toRemoveFields %}

            ->remove('{{ toRemoveField }}')
        {%- endfor -%}
        ;
    }
{% endblock class_body %}
}
